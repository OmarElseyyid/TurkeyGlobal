@model Entity.Entity.Order
@{

    Layout = "~/Views/Shared/_BuyerLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="pd-ltr-20 xs-pd-20-10">
                <div class="min-height-200px">
                    <div class="page-header">
                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <div class="title">
                                    <h3>Yeni Ürün Güncelle</h3>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12 text-right">
                                <img src="~/Areas/Admin/Context/mekasoftware/180x180-M.png" alt="Meka Software" width="50" />
                            </div>
                        </div>
                    </div>
                    @if (ViewBag.Mesaj != null)
                    {
                        <div class="pd-20 card-box mb-30">
                            <div class="clearfix">
                                <div class="pull-left">
                                    <h4 class="text-blue h4">Hata Mesajı</h4>
                                </div>
                            </div>
                            <div>
                                <p>@ViewBag.Mesaj</p>
                            </div>
                        </div>
                    }
                    <div class="pd-20 card-box mb-30">
                        <div class="clearfix">
                            <div class="pull-left">
                                <h4 class="text-blue h4">Yeni Ürün Güncelle</h4>
                            </div>
                        </div>
                        <!-- Buraya Form Kısmını Ekle -->
                        @using (Html.BeginForm("UpdateOrder", "Buyer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label class="control-label col-md-2">ProductCategory</label>
                            <div class="col-md-12">
                                @Html.DropDownList("ProductCategoryID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ProductCategoryid, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Açıklama</label>
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", style = "width:100%" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Price</label>
                            <div class="col-md-12">
                                <input type="number" name="OfferPrice" value="@Model.OfferPrice" class="form-control" required placeholder="Price" maxlength="110" />
                                @Html.ValidationMessageFor(model => model.OfferPrice, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Döviz Tipi</label>
                            <div class="col-md-12">
                                @Html.DropDownList("CurrencyTypeid", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CurrencyTypeid, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Aktif Durumu</label>
                            <div class="col-md-12">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.IsActive) Aktif | Pasif
                                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <div class="col-md-offset-2 col-md-10">
                                    <button type="submit" class="btn btn-outline-success"><i class="fa fa-check"></i> Yeni Ürün Güncelle</button>
                                    <a href="@Url.Action("Index","Buyer")" class="btn btn-outline-dark"><i class="fa fa-reply-all"></i> Listeye Geri Dön</a>
                                </div>
                            </div>
                        </div>
                    </div>
                        }
                        <!--Form bitiş-->
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
